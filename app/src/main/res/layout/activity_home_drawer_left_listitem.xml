<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?selectableItemBackground"
    android:theme="@style/MyBorderlessButton"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_home_drawer_left_listheight"
    android:layout_margin="0dp"
    android:orientation="horizontal"
    android:padding="0dp">

    <ImageView
        android:id="@android:id/icon"
        android:layout_width="@dimen/activity_home_drawer_left_listimg"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:fontFamily="sans-serif-light"
        android:maxHeight="@dimen/activity_home_drawer_left_listimg"
        android:maxWidth="@dimen/activity_home_drawer_left_listimg"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:maxLines="5"
        android:padding="16dp"
        android:text="@android:string/unknownName"
        android:textColor="@color/activity_home_drawer_left_listitem"
        android:textSize="18sp" />

</LinearLayout>